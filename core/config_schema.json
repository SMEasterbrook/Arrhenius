{
    "co2": {
        "type": "object",
        "properties": {
            "from": {
                "type": "numeric",
                "minimumExclusive": 0
            },
            "to": {
                "type": "numeric",
                "minimumExclusive": 0
            }
        },

        "required": ["from", "to"]
    },
    "title": "Arrhenius model configuration",
    "description": "Configuration settings for a run of The Arrhenius Project's climate model",

    "type": "object",
    "properties": {
        "year": {
            "type": "integer"
        },
	"grid": {
            "dims": {
                 "type": "object",
                 "properties": {
                     "lat": {
                         "type": "numeric",
                         "minimumExclusive": 0
                     },
                     "lon": {
                         "type": "numeric",
                         "minimumExclusive": 0
                     }
                 },

		 "required": ["lat", "lon"]
             },
             "repr": { 
                 "type": "string",
                 "enum": ["count", "width"]
             },

	     "required": ["dims"]
        },
        "num_layers": {
            "type": "integer",
	    "minimum": 1
        },
        "num_iters": {
            "type": "integer",
	    "minimum": 1
        },
        "aggregate_lat": {
            "type": "string",
	    "enum": ["before", "after", "none"]
        },
	"aggregate_level": {
            "enum": ["before", "after", "none"]
        },
        "temp_src": {
            "type": "string"
        },
        "humidity_src": {
            "type": "string"
        },
        "albedo_src": {
            "type": "string"
        },
        "absorbance_src": {
            "type": "string"
        },
        "CO2_weight": {
            "type": "string",
	    "enum": ["closest", "low", "high", "mean"]
        },
        "H2O_weight": {
            "type": "string",
	    "enum": ["closest", "low", "high", "mean"]
        },
        "scale": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "type": "number"
            }
        }
    },

    "required": [
	    "year",
	    "layers",
	    "iters",
	    "aggregate_lat",
	    "temp_src",
	    "humidity_src",
	    "albedo_src",
	    "absorbance_src"
    ]
}
